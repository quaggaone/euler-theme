    <!-- Open Graph meta tags -->
    <meta property="og:title" content="Building Better Businesses">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://hotbird.one">
    <meta property="og:image" content="assets/brand/hbc-open-graph.png">
