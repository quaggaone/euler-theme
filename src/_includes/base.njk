    <meta name="twitter:card" content="summary_large_image">

    <meta name="google-site-verification" content="">
    <title>{{ title }} | Hotbird &amp; Company</title>
    <link rel="stylesheet" href="assets/themes/hotbird/css/main.css">
</head>

<body class="{{ bodyModifier }}">
    {% include "partials/header.njk" %}
    <main>
        {{ content | safe }}
    </main>
    {% include "partials/footer.njk" %}
    <script src="assets/themes/hotbird/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
